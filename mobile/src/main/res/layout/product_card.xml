<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="120dp"
    card_view:cardCornerRadius="4dp">

  <com.balysv.materialripple.MaterialRippleLayout
      android:id="@+id/ripple"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:mrl_rippleAlpha="0.10"
      app:mrl_rippleOverlay="false"
      app:mrl_rippleHover="true"
      app:mrl_rippleDimension="1dp"
      app:mrl_rippleDuration="250"
      app:mrl_rippleInAdapter="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <net.grappendorf.buyright.AutoResizeTextView
          android:id="@+id/name"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_centerInParent="true"
          android:padding="8dp"
          android:textSize="24sp"
          android:text="@string/product_name_placeholder"
          android:gravity="center"
          android:maxLines="2"
          android:textColor="@color/icons"/>

    </RelativeLayout>

  </com.balysv.materialripple.MaterialRippleLayout>

</android.support.v7.widget.CardView>
